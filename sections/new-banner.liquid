<div class="home-banner pos-relative">
  <img
    alt="image banner"
    src="{{ section.settings.banner-img | image_url   }}"
    width="100%"
    height="100%">
  <div class="content pos-abs">
    <div class="container">
      <h6>
        {{ section.settings.mini-text }}
      </h6>
      <h1>{{ section.settings.title }}</h1>
      <p>{{ section.settings.content }}</p>
      <a href=" {{ section.settings.url }}">
        SHOP NOW
      </a>
    </div>
  </div>
</div>

<style>

  .home-banner {
    overflow: hidden;
    display: grid;
    align-items: center;

  }

  .home-banner .content {
    text-align: left;
    top: 50%;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    width: 100%;
  }

  .content a {
    display: block;
    background: #cc4d0f;
    color: #fff;
    text-decoration: none;
    width: fit-content;
    padding: 10px 2em;
    margin: 2em 0 0;
  }

  body .home-banner h6 {
    font-size: 14px;
    color: #121212;
    margin: 0;
  }

  body .home-banner h1 {
    margin: 0.5em 0;
  }

  body .home-banner p {
    margin: 0;
  }

  .home-banner p {
    max-width: 340px;
    width: 100%;
    margin: 0.5em 0 0;
    font-weight: 600;
  }

  .home-banner img {
    width: 100%;
    max-height: 80vh;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    object-position: : left;
  }

</style>

{% schema %}
  {
    "name": "New Banner",
    "class": "new-banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "banner-img",
        "label": "Banner Image"
      },
      {
        "type": "text",
        "id": "mini-text",
        "label": "Mini Text"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "content",
        "label": "Content",
        "default": "Award winning products"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Url"
      }
    ],
    "presets": [
      {
        "name": "New Banner",
        "settings": {
          "mini-text": "New Arrival From Prsets",
          "title": "Title",
          "content": "Award winning products"
        }
      }
    ]
  }

{% endschema %}